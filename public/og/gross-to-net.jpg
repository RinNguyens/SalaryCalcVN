<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#06B6D4;stop-opacity:0.5" />
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0.5" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="800" height="400" fill="url(#grad1)" opacity="0.1"/>

  <!-- Money icons -->
  <g transform="translate(50, 100)">
    <rect x="0" y="0" width="120" height="60" rx="8" fill="#8B5CF6" opacity="0.2"/>
    <text x="60" y="35" text-anchor="middle" fill="#8B5CF6" font-size="24" font-weight="bold" font-family="Arial">GROSS</text>
  </g>

  <g transform="translate(200, 180)">
    <path d="M 0 0 L 80 0" stroke="#EC4899" stroke-width="3" stroke-dasharray="5,5"/>
  </g>

  <g transform="translate(340, 100)">
    <rect x="0" y="0" width="120" height="60" rx="8" fill="#EC4899" opacity="0.2"/>
    <text x="60" y="35" text-anchor="middle" fill="#EC4899" font-size="24" font-weight="bold" font-family="Arial">NET</text>
  </g>

  <!-- Calculator -->
  <g transform="translate(550, 120)">
    <rect x="0" y="0" width="140" height="180" rx="12" fill="white" opacity="0.9"/>
    <rect x="10" y="10" width="120" height="40" rx="4" fill="#8B5CF6" opacity="0.2"/>
    <text x="70" y="35" text-anchor="middle" fill="#8B5CF6" font-size="20" font-weight="bold">30,000,000</text>

    <!-- Buttons -->
    <g fill="#06B6D4" opacity="0.3">
      <rect x="10" y="60" width="25" height="25" rx="4"/>
      <rect x="45" y="60" width="25" height="25" rx="4"/>
      <rect x="80" y="60" width="25" height="25" rx="4"/>
      <rect x="115" y="60" width="25" height="25" rx="4"/>

      <rect x="10" y="95" width="25" height="25" rx="4"/>
      <rect x="45" y="95" width="25" height="25" rx="4"/>
      <rect x="80" y="95" width="25" height="25" rx="4"/>
      <rect x="115" y="95" width="25" height="25" rx="4"/>

      <rect x="10" y="130" width="60" height="30" rx="4"/>
      <rect x="80" y="130" width="60" height="30" rx="4" fill="#EC4899" opacity="0.3"/>
    </g>
  </g>

  <!-- Percentages -->
  <text x="100" y="250" fill="#8B5CF6" font-size="18" font-weight="bold" font-family="Arial">-8%</text>
  <text x="100" y="280" fill="#06B6D4" font-size="18" font-weight="bold" font-family="Arial">-1.5%</text>
  <text x="100" y="310" fill="#10B981" font-size="18" font-weight="bold" font-family="Arial">-1%</text>
  <text x="100" y="340" fill="#EC4899" font-size="18" font-weight="bold" font-family="Arial">-10%</text>

  <!-- Title -->
  <text x="400" y="50" text-anchor="middle" fill="white" font-size="28" font-weight="bold" font-family="Arial">
    Tính Lương Gross → Net
  </text>
</svg>