<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="800" height="400" fill="url(#grad1)" opacity="0.1"/>

  <!-- Person 1 -->
  <g transform="translate(100, 150)">
    <circle cx="40" cy="40" r="30" fill="#8B5CF6" opacity="0.3"/>
    <path d="M 40 80 L 40 150 M 20 100 L 60 100 M 20 130 L 60 130" stroke="#8B5CF6" stroke-width="3"/>
    <!-- Speech bubble -->
    <rect x="-30" y="20" width="120" height="60" rx="8" fill="white" opacity="0.9"/>
    <text x="30" y="45" text-anchor="middle" fill="#8B5CF6" font-size="16" font-weight="bold">I want 25M</text>
  </g>

  <!-- Negotiation arrows -->
  <g>
    <path d="M 200 200 L 350 200" stroke="#EC4899" stroke-width="3" marker-end="url(#arrowhead)"/>
    <path d="M 350 180 L 200 180" stroke="#06B6D4" stroke-width="3" marker-end="url(#arrowhead2)"/>
  </g>

  <!-- Arrow markers -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#EC4899"/>
    </marker>
    <marker id="arrowhead2" markerWidth="10" markerHeight="7" refX="1" refY="3.5" orient="auto">
      <polygon points="10 0, 0 3.5, 10 7" fill="#06B6D4"/>
    </marker>
  </defs>

  <!-- Person 2 -->
  <g transform="translate(400, 150)">
    <circle cx="40" cy="40" r="30" fill="#EC4899" opacity="0.3"/>
    <path d="M 40 80 L 40 150 M 20 100 L 60 100 M 20 130 L 60 130" stroke="#EC4899" stroke-width="3"/>
    <!-- Speech bubble -->
    <rect x="-30" y="20" width="120" height="60" rx="8" fill="white" opacity="0.9"/>
    <text x="30" y="45" text-anchor="middle" fill="#EC4899" font-size="16" font-weight="bold">My offer: 20M</text>
  </g>

  <!-- Success handshake -->
  <g transform="translate(550, 160)">
    <rect x="0" y="0" width="180" height="100" rx="12" fill="#10B981" opacity="0.1"/>
    <!-- Handshake icon -->
    <g transform="translate(60, 30)">
      <path d="M 0 20 L 60 20 M 10 10 L 10 30 M 50 10 L 50 30 M 20 25 L 40 25"
            stroke="#10B981" stroke-width="4" stroke-linecap="round"/>
      <circle cx="30" cy="25" r="8" fill="#10B981"/>
    </g>
    <text x="90" y="75" text-anchor="middle" fill="#10B981" font-size="18" font-weight="bold" font-family="Arial">DEAL: 22.5M</text>
  </g>

  <!-- Title -->
  <text x="400" y="50" text-anchor="middle" fill="white" font-size="28" font-weight="bold" font-family="Arial">
    Đàm Phán Lương Hiệu Quả
  </text>

  <!-- Stats -->
  <g transform="translate(200, 320)">
    <rect x="0" y="0" width="400" height="60" rx="8" fill="white" opacity="0.9"/>
    <text x="200" y="25" text-anchor="middle" fill="#8B5CF6" font-size="20" font-weight="bold" font-family="Arial">
      +25% Thu nhập
    </text>
    <text x="200" y="45" text-anchor="middle" fill="#EC4899" font-size="16" font-family="Arial">
      Đàm phán thành công
    </text>
  </g>
</svg>