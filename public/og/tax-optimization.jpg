<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#10B981;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="800" height="400" fill="url(#grad1)" opacity="0.1"/>

  <!-- Tax document -->
  <g transform="translate(100, 100)">
    <rect x="0" y="0" width="200" height="240" rx="8" fill="white" opacity="0.9"/>
    <rect x="0" y="0" width="200" height="40" rx="8" fill="#8B5CF6" opacity="0.3"/>
    <text x="100" y="25" text-anchor="middle" fill="#8B5CF6" font-size="16" font-weight="bold" font-family="Arial">TỜ KHAI THUẾ TNCN</text>

    <!-- Form lines -->
    <g stroke="#CBD5E1" stroke-width="1">
      <line x1="20" y1="60" x2="180" y2="60"/>
      <line x1="20" y1="80" x2="180" y2="80"/>
      <line x1="20" y1="100" x2="180" y2="100"/>
      <line x1="20" y1="120" x2="180" y2="120"/>
      <line x1="20" y1="140" x2="180" y2="140"/>
      <line x1="20" y1="160" x2="180" y2="160"/>
      <line x1="20" y1="180" x2="180" y2="180"/>
      <line x1="20" y1="200" x2="180" y2="200"/>
      <line x1="20" y1="220" x2="180" y2="220"/>
    </g>
  </g>

  <!-- Piggy bank -->
  <g transform="translate(400, 140)">
    <ellipse cx="60" cy="60" rx="60" ry="50" fill="#EC4899" opacity="0.3"/>
    <ellipse cx="60" cy="40" rx="40" ry="35" fill="#EC4899" opacity="0.3"/>
    <!-- Eye -->
    <circle cx="45" cy="35" r="5" fill="#8B5CF6"/>
    <!-- Nose -->
    <ellipse cx="25" cy="45" rx="8" ry="6" fill="#8B5CF6"/>
    <!-- Leg -->
    <rect x="35" y="90" width="8" height="20" rx="4" fill="#EC4899" opacity="0.5"/>
    <rect x="55" y="90" width="8" height="20" rx="4" fill="#EC4899" opacity="0.5"/>
    <rect x="75" y="90" width="8" height="20" rx="4" fill="#EC4899" opacity="0.5"/>
    <rect x="95" y="90" width="8" height="20" rx="4" fill="#EC4899" opacity="0.5"/>
  </g>

  <!-- Money flowing into piggy -->
  <g>
    <path d="M 320 180 Q 360 140 400 160" stroke="#10B981" stroke-width="3" fill="none" marker-end="url(#moneyArrow)"/>
    <path d="M 320 200 Q 360 160 400 180" stroke="#10B981" stroke-width="3" fill="none" marker-end="url(#moneyArrow)"/>
  </g>

  <!-- Arrow marker -->
  <defs>
    <marker id="moneyArrow" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#10B981"/>
    </marker>
  </defs>

  <!-- Savings box -->
  <g transform="translate(550, 160)">
    <rect x="0" y="0" width="180" height="120" rx="12" fill="#10B981" opacity="0.1"/>
    <text x="90" y="30" text-anchor="middle" fill="#10B981" font-size="18" font-weight="bold" font-family="Arial">TIẾT KIỆM</text>
    <text x="90" y="55" text-anchor="middle" fill="#EC4899" font-size="24" font-weight="bold" font-family="Arial">50-100M</text>
    <text x="90" y="75" text-anchor="middle" fill="#8B5CF6" font-size="14" font-family="Arial">mỗi năm</text>
  </g>

  <!-- Title -->
  <text x="400" y="50" text-anchor="middle" fill="white" font-size="28" font-weight="bold" font-family="Arial">
    Tối Ưu Thuế TNCN
  </text>

  <!-- Optimization methods -->
  <g transform="translate(150, 290)">
    <rect x="0" y="0" width="500" height="80" rx="8" fill="white" opacity="0.9"/>
    <text x="50" y="30" fill="#8B5CF6" font-size="16" font-weight="bold" font-family="Arial">5 phương pháp:</text>
    <text x="50" y="50" fill="#6B7280" font-size="14" font-family="Arial">1. Giảm trừ gia cảnh</text>
    <text x="200" y="50" fill="#6B7280" font-size="14" font-family="Arial">2. BHXH tự nguyện</text>
    <text x="350" y="50" fill="#6B7280" font-size="14" font-family="Arial">3. Quỹ hưu trí</text>
    <text x="50" y="70" fill="#6B7280" font-size="14" font-family="Arial">4. Học phí</text>
    <text x="200" y="70" fill="#6B7280" font-size="14" font-family="Arial">5. Từ thiện</text>
  </g>
</svg>