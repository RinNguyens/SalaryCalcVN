<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="800" height="400" fill="url(#grad1)" opacity="0.1"/>

  <!-- Company A card -->
  <g transform="translate(80, 120)">
    <rect x="0" y="0" width="180" height="200" rx="12" fill="white" opacity="0.95"/>
    <rect x="0" y="0" width="180" height="40" rx="12" fill="#8B5CF6" opacity="0.3"/>
    <text x="90" y="25" text-anchor="middle" fill="#8B5CF6" font-size="16" font-weight="bold" font-family="Arial">Company A</text>

    <!-- Content -->
    <text x="15" y="65" fill="#1F2937" font-size="14" font-weight="bold">Offer:</text>
    <text x="15" y="85" fill="#10B981" font-size="18" font-weight="bold">35M/tháng</text>

    <text x="15" y="115" fill="#6B7280" font-size="12">✓ 13th month</text>
    <text x="15" y="135" fill="#6B7280" font-size="12">✓ 2 months bonus</text>
    <text x="15" y="155" fill="#6B7280" font-size="12">✓ ESOP 0.5%</text>
    <text x="15" y="175" fill="#EF4444" font-size="12">✗ 9-9-6 hours</text>
  </g>

  <!-- VS sign -->
  <g transform="translate(320, 200)">
    <circle cx="30" cy="30" r="30" fill="#F59E0B" opacity="0.3"/>
    <text x="30" y="35" text-anchor="middle" fill="#F59E0B" font-size="20" font-weight="bold" font-family="Arial">VS</text>
  </g>

  <!-- Company B card -->
  <g transform="translate(400, 120)">
    <rect x="0" y="0" width="180" height="200" rx="12" fill="white" opacity="0.95"/>
    <rect x="0" y="0" width="180" height="40" rx="12" fill="#F59E0B" opacity="0.3"/>
    <text x="90" y="25" text-anchor="middle" fill="#F59E0B" font-size="16" font-weight="bold" font-family="Arial">Company B</text>

    <!-- Content -->
    <text x="15" y="65" fill="#1F2937" font-size="14" font-weight="bold">Offer:</text>
    <text x="15" y="85" fill="#10B981" font-size="18" font-weight="bold">40M/tháng</text>

    <text x="15" y="115" fill="#6B7280" font-size="12">✓ 13th month</text>
    <text x="15" y="135" fill="#6B7280" font-size="12">✓ Guaranteed bonus</text>
    <text x="15" y="155" fill="#6B7280" font-size="12">✓ RSU 30M/year</text>
    <text x="15" y="175" fill="#10B981" font-size="12">✓ 9-5-5 hours</text>
  </g>

  <!-- Comparison arrows -->
  <g transform="translate(300, 100)">
    <path d="M 0 0 L 0 -30 L 180 -30" stroke="#EC4899" stroke-width="2" fill="none"/>
    <text x="90" y="-35" text-anchor="middle" fill="#EC4899" font-size="12" font-weight="bold">+5M base</text>
  </g>

  <!-- Checkmark for winner -->
  <g transform="translate(560, 100)">
    <circle cx="20" cy="20" r="18" fill="#10B981"/>
    <path d="M 10 20 L 17 27 L 30 13" stroke="white" stroke-width="4" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </g>

  <!-- Decision matrix -->
  <g transform="translate(100, 280)">
    <rect x="0" y="0" width="600" height="80" rx="8" fill="white" opacity="0.9"/>
    <text x="20" y="25" fill="#1F2937" font-size="14" font-weight="bold">Total Compensation:</text>
    <text x="200" y="25" fill="#6B7280" font-size="14">A: 556M/năm</text>
    <text x="350" y="25" fill="#10B981" font-size="14" font-weight="bold">B: 742.5M/năm</text>

    <text x="20" y="50" fill="#1F2937" font-size="14" font-weight="bold">Work-Life:</text>
    <text x="200" y="50" fill="#EF4444" font-size="14">Poor</text>
    <text x="350" y="50" fill="#10B981" font-size="14" font-weight="bold">Excellent</text>

    <text x="20" y="70" fill="#1F2937" font-size="14" font-weight="bold">Recommendation:</text>
    <text x="350" y="70" fill="#10B981" font-size="14" font-weight="bold">Choose B! ✨</text>
  </g>

  <!-- Title -->
  <text x="400" y="50" text-anchor="middle" fill="white" font-size="28" font-weight="bold" font-family="Arial">
    So Sánh Job Offers
  </text>
</svg>