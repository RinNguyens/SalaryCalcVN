# ============================================
# SALARYLENS CONFIGURATION
# ============================================

# App Info
NEXT_PUBLIC_APP_NAME="SalaryLens"
NEXT_PUBLIC_APP_TAGLINE="Crystal Clear Salary Insights"
NEXT_PUBLIC_APP_URL="https://salarylens.com"

# Z.AI Configuration for AI Assistant
# Get your API key from: https://z.ai/manage-apikey/apikey-list

# API Key (REPLACE WITH YOUR OWN KEY!)
NEXT_PUBLIC_ZAI_API_KEY=your_api_key_here

# API Base URL (Chat Completions API)
NEXT_PUBLIC_ZAI_API_URL=https://api.z.ai/api/paas/v4

# Model Selection (FREE MODEL!)
# glm-4.5-flash = FREE and fast!
# Other options: glm-4.5, glm-4.5-air, glm-4.6
NEXT_PUBLIC_ZAI_MODEL=glm-4.5-flash

# Optional Settings
NEXT_PUBLIC_ZAI_MAX_TOKENS=2048
NEXT_PUBLIC_ZAI_TEMPERATURE=0.7
NEXT_PUBLIC_ZAI_TIMEOUT=30000
NEXT_PUBLIC_ZAI_DEBUG=false

# Google Analytics 4 Configuration
# Get your Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Enable debug mode for development
NEXT_PUBLIC_GA_DEBUG=false